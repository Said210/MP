<div  ng-controller="suggestions">
	
	<form action="#">
		<input type="text" id="LookFor">
		<input type="button" value="Buscar" ng-click="buscar()">
	</form>
	<div ng-repeat="i in spotify_artists.items" style="background-color:#000;color:#fff;width:40%; display:inline-block">
		<img src="{{i.images[0].url}}" width="50px" alt="">
			{{i.name}} <br>
		<span class="link" ng-click="find_similar_artists(i.uri)">MÃ¡s como esto</span> - <span class="link" ng-click="show_top_music(i.id)">Dame los hits</span>
	</div>
	
	<div ng-repeat="j in similar_artists" style="background-color:#f0f0f0;color:#000;width:40%; display:inline-block">
		<img src="{{similar_artists_pics[$index+1].images[0].url}}" width="50px" alt="">
		{{similar_artists_pics[$index+1].name}}
		
		<br>
	</div>

	<div ng-repeat="track in dude_top_tracks">
		<iframe id="{{track.id}}" class="playButton" src="#" data-uris="{{track.uri}}" ng-name="{{track.name}}" width="80" height="80" frameborder="0" allowtransparency="true"></iframe>
		{{track.name}} <br>
		<span ng-click="playPreview(j.preview_url)">Play preview</span>
		<hr>

	</div>
	
	

</div>