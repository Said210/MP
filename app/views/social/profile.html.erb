<%= stylesheet_link_tag 'social/me', media: 'all', 'data-turbolinks-track' => true %>

<script>
  function do_timeago(){
    $("abbr.timeago").timeago();
  }
  $(function () {
    window.setTimeout(function(){do_timeago();},600);
  });
  
</script>
<div class="cover">
  <p class="Username">@<%=@u.username%></p>
  <%if !@me%>

    <div class="sp-btn follow" id="follow" data-username="<%=@u.username%>"> <i class="fa fa-plus"></i>
    <span id="ftext"> <%if check_friendship(current_user.id, @u.id)[0].nil? %>Follow<%else%>Unfollow<%end%> </span></div>

    <div class="sp-btn enemy"> <i class="fa fa-warning"></i> Declare War</div>

  <%end%>
</div>
<div class="pp-container">
  <img class="pp" src="<%=@u.avatar.url(:medium)%>">
</div>

<div class="submenu" ng-controller="profile-panel" ng-init="load_posts(<%=@u.id %>)">
  <ul type="none">
    <li class="active">Posts</li>
    <li>Enemies</li>
    <li>Followers</li>
    <li class="l-filter"><input type="text" placeholder="Buscar..." ng-model="search" class="filter" onkeyup="do_timeago()"></li>
  </ul>
  

  <%= form_for(@post) do |f| %>
    <div class="field">
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <%end%>
  
  <form action="/add" method="post"><input type="text" name="username"> <input type="submit" value="add"> </form>

  <div ng-repeat="post in posts | filter:search">
    {{post.text}} <br>
    <sub><abbr class="timeago" title="{{post.updated_at}}"></abbr>
    <hr></sub>
  </div>
  
  <hr>

  <% @friends.each do |f| %>
    <b>Name: </b><i><%=get_name(f.friend_id)%></i>
  <% end %>
  
</div>